# The first useful Makefile
# 
# executable: school
# rules: all
#
# variables
# 	CC: Compiler to be used
# 	SRC: the .c files
# 	OBJ: the .o files
# 	NAME: name of the executable

CC = gcc
SRC = main.c school.c
OBJ := $(patsubst %.c,%.o,$(SRC))
NAME = school

all: ${NAME}
${NAME}: ${OBJ}
	${CC} -o ${NAME} ${OBJ}

%.o: %.c
	%{CC} -c $<
